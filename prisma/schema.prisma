datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String       @id @default(uuid())
  username  String       @unique
  createdAt DateTime     @default(now())
  games     GamePlayer[]
}

model Game {
  id        String       @id @default(uuid())
  code      String       @unique // Para invitar por c√≥digo
  createdAt DateTime     @default(now())
  started   Boolean      @default(false)
  finished  Boolean      @default(false)
  players   GamePlayer[]
  rounds    Round[]
}

model GamePlayer {
  id     String @id @default(uuid())
  user   User   @relation(fields: [userId], references: [id])
  userId String
  game   Game   @relation(fields: [gameId], references: [id])
  gameId String
  score  Int    @default(0)
}

model Round {
  id      String   @id @default(uuid())
  game    Game     @relation(fields: [gameId], references: [id])
  gameId  String
  letter  String
  startAt DateTime
  endAt   DateTime
  // Puedes agregar respuestas, etc.
}
